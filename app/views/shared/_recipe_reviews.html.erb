<div class="container mt-5">
  <h2 class="lato-bold mb-4">Reviews</h2>

  <% if @recipe.reviews.any? %>
    <% @recipe.reviews.each do |review| %>
      <div class="card mb-3 p-3">
        <div class="d-flex justify-content-between align-items-center">
          <strong>Rating:</strong>
          <span><%= review.rating %>/5 ⭐️</span>
        </div>
        <p class="mt-2"><%= review.comment %></p>
        <% if review.user %>
          <p class="text-muted mb-0" style="font-size: 0.9rem;">– <%= review.user.user_name || review.user.email %></p>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <p class="text-muted">No reviews yet. Be the first to share your thoughts!</p>
  <% end %>
</div>
