<div class="modal fade" id="shareModal" tabindex="-1" aria-labelledby="shareModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
      </div>
      <div class="modal-body">
        <!-- Share Options -->
        <div>
          <h3 class="d-flex justify-content-center mb-5">Share <%= @recipe.user.user_name %>'s recipe:</h3>
        </div>
        <div class="d-flex justify-content-center">
          <a href="https://www.facebook.com/sharer/sharer.php?u=<%= request.original_url %>" target="_blank" class="mx-2">
            <i class="fa-brands fa-facebook"></i>
          </a>
          <a href="https://twitter.com/intent/tweet?url=<%= request.original_url %>&text=Check%20this%20out!" target="_blank" class="mx-2">
            <i class="fa-brands fa-x-twitter"></i>
          </a>
          <a href="https://www.instagram.com" target="_blank" class="mx-2">
            <i class="fa-brands fa-instagram"></i>
          </a>
          <a href="mailto:?subject=Check%20this%20out&body=<%= request.original_url %>" target="_blank" class="mx-2">
            <i class="fa-solid fa-envelope"></i>
          </a>
        </div>
      </div>
      <%# <div class="modal-footer">
        <button type="button" class="btn btn-primary rounded-pill" data-bs-dismiss="modal">Close</button>
      </div> %>
    </div>
  </div>
</div>
